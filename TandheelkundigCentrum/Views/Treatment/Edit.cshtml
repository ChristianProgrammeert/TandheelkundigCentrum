@using TandheelkundigCentrum.Data.Models
@model Treatment?
@{
    ViewBag.Title = Model == null ? "Voeg Behandeling toe" : "Wijzig Behandeling";
}


<div>
    <div class="d-flex flex-row justify-content-between">
        <h1 class="display-4">Behandeling @(Model == null ? "Toevoegen" : "Wijzigen")</h1>
        <div class="d-flex align-items-center">
            <a asp-action="Index">
                <button type="button" class="btn btn-info">
                    <i class="bi bi-houses"></i>
                    Alle Behandelingen
                </button>
            </a>
        </div>
    </div>
    <form method="post">
        <div class="form-group">
            <label for="name">Behandelingnaam</label>
            <input type="text" required class="form-control" id="name" asp-for="Name" placeholder="Behandeling" value="@Model?.Name">
        </div>
        <div class="form-group">
            <label for="duration">Behandelingsduur </label>
            <input type="number" required class="form-control" id="duration" asp-for="Duration" placeholder="2" value="@Model?.Duration">
        </div>
        <div class="form-group">
            <label for="price" class="col-sm-4 col-form-label">Behandelingskosten</label>
                <div class="input-group">
                    <span class="input-group-text">€</span>
                    <input type="number" required class="form-control" id="price" min="1" step="any" asp-for="Price" placeholder="00.00" value="@Model?.Price">
                </div>
        </div>
        <br>
        @if (Model != null)
        {
            <input type="hidden" class="form-control" id="id" asp-for="Id" value="@Model.Id">
        }

        <div class="d-flex flex-row">
            <div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check"></i>@(Model == null ? "Voeg toe" : "Wijzig")
                </button>
            </div>
            &ensp;
            @if (Model != null)
            {
                <a asp-action="Delete" asp-route-id="@Model.Id">
                    <button type="button" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                        Verwijder
                    </button>
                </a>
            }
        </div>
    </form>
</div>