@using TandheelkundigCentrum.Data.Models
@model Room?
@{
    ViewBag.Title = Model == null ? "Voeg kamer toe" : "Wijzig bestaande kamer";
}


<div>
    <div class="d-flex flex-row justify-content-between">
        <h1 class="display-4">Kamer @(Model == null ? "Toevoegen" : "Wijzigen")</h1>
        <div class="d-flex align-items-center">
            <a asp-action="Index">
                <button type="button" class="btn btn-info">
                    <i class="bi bi-houses"></i>
                    Alle Kamers
                </button>
            </a>
        </div>
    </div>
    <form method="post">
        <div class="form-group">
            <label for="name">Kamernaam</label>
            <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Name" value="@Model?.Name">
        </div>
        <br>
        @if (Model != null)
        {
            <input type="hidden" class="form-control" id="id" asp-for="Id" value="@Model.Id">
        }

        <div class="d-flex flex-row">
            <div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check"></i>@(Model == null ? "Voeg toe" : "Wijzig")
                </button>
            </div>
            &ensp;
            @if (Model != null)
            {
                <a asp-action="Delete" asp-route-id="@Model.Id">
                    <button type="button" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                        Verwijder
                    </button>
                </a>
            }
        </div>
    </form>
</div>