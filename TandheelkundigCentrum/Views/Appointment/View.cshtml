@model TandheelkundigCentrum.Data.Models.Appointment;
@{
    ViewData["Title"] = "Afspraaknummer: " + Model.Id;
}
<div>
    <div class="d-flex flex-row justify-content-between">
        <h1 class="display-4">@Model.Name</h1>
        <div class="d-flex align-items-center">
            <a asp-action="Index">
                <button type="button" class="btn btn-info">
                    <i class="bi bi-houses"></i>
                    Alle Afspraken
                </button>
            </a>
            &ensp;
            <a asp-action="Edit" asp-route-appointmentId="@Model.Id">
                <button type="button" class="btn btn-warning">
                    <i class="bi bi-pen"></i>
                    Afspraak bewerken
                </button>
            </a>
        </div>
    </div>
    <h2>Patienten:</h2>
    <sub>@Model.Patients.Count van de @Model.Capacity plekken bezet.</sub>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Naam</th>
                <th scope="col">Ziekte</th>
                <th scope="col">Eerste Contactpersoon</th>
                <th scope="col">Tweede Contactpersoon</th>
                <th scope="col">Leeftijd</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model.Patients)
            {
                <tr>
                    <th scope="row">
                        @patient.User.Prefix @patient.User.Name
                    </th>
                    <td>
                        @patient.Illness
                    </td>
                    <td>
                        @* @patient.ContactPrimary.Name *@
                    </td>
                    <td>
                        @* @patient.ContactSecondary.Name *@
                    </td>
                    <td>
                        @((patient.User.Birthdate.ToDateTime(TimeOnly.MinValue) - DateTime.Now).TotalDays / 365)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
