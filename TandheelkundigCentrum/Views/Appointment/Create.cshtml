@using TandheelkundigCentrum.Data.Models
@model Appointment
@{
    ViewData["Title"] = "Dashboard";
}

<div>
    <div class="d-flex flex-row justify-content-between">
        <h1 class="display-4">Afspraak Toevoegen</h1>
        <div class="d-flex align-items-center">
            <a asp-action="Index">
                <button type="button" class="btn btn-info">
                    <i class="bi bi-houses"></i>
                    Alle Kamers
                </button>
            </a>
        </div>
    </div>
    <form method="post">
        <div class="form-group">
            <label>Behandelingen:</label>
            @foreach(Treatment t in ViewBag.Treatments)
            {
                <input
                    type="checkbox"
                    class="btn-check"
                    id="treatment-@t.Id"
                    name="treatment-@t.Id"
                    value="@Model.Treatments.Any(mt => mt.Id == t.Id)"
                    autocomplete="off"
                >
                <label class="btn btn-outline-primary" for="treatment-@t.Id">@t.Name</label>
            }
        </div>

        <div class="form-group">
            <label>Tandarts:</label>
            <select asp-for="Dentist" class="form-control">
                <option value="">-- Selecteer Tandarts --</option>
                @foreach (User dentist in ViewBag.Dentists)
                {
                    <option value="@dentist">@dentist.Fullname</option>
                }
            </select>
            <span asp-validation-for="Dentist" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label >Patient:</label>
            <select asp-for="Patient" class="form-control">
                <option value="">-- Selecteer Patient --</option>
                @foreach (User patient in ViewBag.Patients)
                {
                    <option value="@patient">@patient.Fullname</option>
                }
            </select>
            <span asp-validation-for="Patient" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Room">Kamer:</label>
            <select asp-for="Room" class="form-control">
                <option value="Room">-- Selecteer Kamer --</option>
                @foreach (Room room in ViewBag.Rooms)
                {
                    <option value="@room">@room.Name</option>
                }
            </select>
            <span asp-validation-for="Room" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="DateTime">Appointment Date and Time:</label>
            <input asp-for="DateTime" class="form-control" type="datetime-local">
            <span asp-validation-for="DateTime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Note">Note:</label>
            <textarea asp-for="Note" class="form-control"></textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Maak Afspraak</button>
    </form>
</div>