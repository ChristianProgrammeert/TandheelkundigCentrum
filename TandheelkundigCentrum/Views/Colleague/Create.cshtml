@using TandheelkundigCentrum.Data.Models
@model User
@{
    ViewBag.Title = "Nieuwe Collega";
}

<div>
    <div class="d-flex flex-row justify-content-between">
        <h1 class="display-4">Nieuwe Gebruiker</h1>
        <div class="d-flex align-items-center">
            <a asp-action="Index">
                <button type="button" class="btn btn-info">
                    <i class="bi bi-people"></i>
                    Alle Collegas
                </button>
            </a>
        </div>
    </div>
    <form method="post">
        <div class="d-flex row">
            <div class="form-group col-md-1">
                <label asp-for="Prefix" class="form-label"></label>
                <select asp-for="Prefix" class="form-control">
                    <option value="Dhr.">Dhr.</option>
                    <option value="Mvr.">Mvr.</option>
                    <option value="Dr.">Dr.</option>
                </select>
                <span asp-validation-for="Prefix" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Birthdate" class="form-label"></label>
            <input asp-for="Birthdate" type="date" class="form-control" id="birthdate" placeholder="Select a date">
            <span asp-validation-for="Birthdate" class="text-danger"></span>
        </div>

        <div class="d-flex row">
            <div class="form-group col-md-2">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex row">
            <div class="form-group col-md-2">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="PostalCode" class="form-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <p class="form-label">Groepen</p>
        <div class="btn-group" role="group">
            @foreach (var group in Enum.GetValues<Group.GroupName>())
            {
                var groupInputId = "group-" + group;
                <input type="checkbox"
                       class="btn-check"
                       id="@groupInputId"
                       name="@groupInputId"
                       value="@Model.Groups.Any(g => g.Name == group)"
                       autocomplete="off">
                <label class="btn btn-outline-primary" for="@groupInputId">@group</label>
            }
        </div>
        <br>
        <span asp-validation-for="Groups" class="text-danger"></span>
        <br>
        <div class="d-flex flex-row">
            <div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check"></i>Bevestig
                </button>
            </div>
        </div>
    </form>
</div>
<script>
    var today = new Date();
    var minDate = new Date();
    minDate.setFullYear(today.getFullYear() - 150);
    var placeholderDate = new Date();
    placeholderDate.setFullYear(today.getFullYear() - 30);
    var minDateString = minDate.toISOString().split('T')[0];
    var placeholderDateString = placeholderDate.toISOString().split('T')[0];

    document.getElementById("birthdate").setAttribute("min", minDateString);
    document.getElementById("birthdate").setAttribute("max", today.toISOString().split('T')[0]);

    document.getElementById("birthdate").setAttribute("value", placeholderDateString);
</script>