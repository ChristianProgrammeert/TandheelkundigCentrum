@model TandheelkundigCentrum.Data.Models.User
@{
    ViewBag.Title = Model.Id == null ? "Create Room" : "Edit Room";
}

<div>
    <div class="d-flex flex-row justify-content-between">
        <h1 class="display-4">@(Model.Id == null ? "Nieuwe" : "Bewerk") Gebruiker</h1>
        <div class="d-flex align-items-center">
            <a asp-action="Index">
                <button type="button" class="btn btn-info">
                    <i class="bi bi-people"></i>
                    Alle Collegas
                </button>
            </a>
        </div>
    </div>
    <form method="post">
        <div class="d-flex row">
            <div class="form-group col-md-2">
                <label asp-for="Prefix" class="form-label"></label>
                <select asp-for="Prefix" class="form-control">
                    <option value="Dhr.">Dhr.</option>
                    <option value="Mvr.">Mvr.</option>
                    <option value="Dr.">Dr.</option>
                </select>
                <span asp-validation-for="Prefix" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div class="d-flex flex-row">
            <div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check"></i>@(Model.Id == null ? "Create" : "Edit")
                </button>
            </div>
            &ensp;
            @if (Model != null)
            {
                <a asp-action="Delete" asp-route-id="@Model">
                    <button type="button" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                        Delete
                    </button>
                </a>
            }
        </div>
    </form>
</div>